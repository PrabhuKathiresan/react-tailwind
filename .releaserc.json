{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ðŸ› Fixes" },
            { "type": "chore", "section": "ðŸ§¹ Chores", "hidden": false },
            { "type": "ci", "section": "âš™ï¸ CI", "hidden": false },
            { "type": "docs", "section": "ðŸ“ Docs", "hidden": false },
            { "type": "refactor", "section": "ðŸ”„ Refactor", "hidden": false },
            { "type": "test", "section": "âœ… Tests", "hidden": false }
          ]
        },
        "writerOpts": {
          "transform": {
            "commit": "(commit) => { commit.committerDate = commit.committerDate || new Date().toISOString(); return commit; }"
          }
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ðŸ§¾ Changelog\n\nAll notable changes to this project will be documented here."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "pkgRoot": "."
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/react-tailwind.cjs.js", "label": "CommonJS bundle" },
          { "path": "dist/react-tailwind.es.js", "label": "ESM bundle" },
          { "path": "dist/react-tailwind.css", "label": "CSS styles" },
          { "path": "dist/types/index.d.ts", "label": "TypeScript definitions" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
